generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model client {
  id              Int       @default(autoincrement()) @id
  name            String
  clientTypeId    String
  createdAt        DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  createBy        String
  updatedBy       String
  people          people[] 
  locals          local[]
}


model people {
  id                Int       @default(autoincrement()) @id
  name              String
  documentNumber    String
  createdAt          DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  createBy          String
  updatedBy         String
  clientId          Int?
  client            client?   @relation(fields: [clientId], references: [id])
}

model local {
  id            Int       @default(autoincrement()) @id
  name          String
  createdAt      DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  createBy      String
  updatedBy     String
  clientId      Int?
  client        client?   @relation(fields: [clientId], references: [id])
}
